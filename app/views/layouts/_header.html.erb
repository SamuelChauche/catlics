<header class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

            <a href="<%= root_path %>" class="d-flex align-items-center mb-5 mb-lg-0 link-body-emphasis text-decoration-none nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center">
                <%= image_tag "Logocatlics.png", alt: "Catlics Logo", width: 70, class: "me-1" %>
            </a>
            <div class="dropdown text-end">
                <% if user_signed_in? %>

                <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" data-turbo="false" aria-haspopup="true">
                    <%= image_tag "https://picsum.photos/seed/#{current_user.id}/150", alt: "Profile Photo", width: 32, height: 32, class: "rounded-circle" %>
                </a>
                <ul class="dropdown-menu text-small">
                    <!-- ADMIN-->
                    <% if user_signed_in? && current_user.role == "admin" %>
                    <li>
                        <%= link_to admin_users_path, class: "dropdown-item d-flex align-items-center gap-2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-workspace" viewBox="0 0 16 16">
                        <path d="M4 16s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-5.95a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                        <path d="M2 1a2 2 0 0 0-2 2v9.5A1.5 1.5 0 0 0 1.5 14h.653a5.4 5.4 0 0 1 1.066-2H1V3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v9h-2.219c.554.654.89 1.373 1.066 2h.653a1.5 1.5 0 0 0 1.5-1.5V3a2 2 0 0 0-2-2z"/>
                        </svg>
                            Admin
                        <% end %>
                        </li>
                        <% end %>
                    <!-- Profile -->
                    <% unless current_user.admin? %>
                    <li>
                        <%= link_to user_path(current_user), class: "dropdown-item d-flex align-items-center gap-2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                        </svg>
                        Profile
                        <% end %>
                    </li>
                    <!-- Cart -->
                    <li>
                        <% if current_user.cart %>
                        <%= link_to cart_path(current_user.cart), class: "dropdown-item d-flex align-items-center gap-2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-heart" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0M14 14V5H2v9a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1M8 7.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132" />
                        </svg>
                        Cart
                        <% end %>
                        <% else %>
                        <a class="dropdown-item disabled d-flex align-items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-heart" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0M14 14V5H2v9a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1M8 7.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132" />
                            </svg>
                            Cart
                        </a>
                        <% end %>
                    </li>
                    <% end %>
                    <!-- Divider -->
                    <li>
                        <hr class="dropdown-divider">
                    </li>

                    <!-- Sign Out -->
                    <li>
                        <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item d-flex align-items-center gap-2" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                        </svg>
                        Sign out
                        <% end %>
                    </li>
                </ul>


                <% else %>

                <div class="d-flex gap-2">
                    <%= link_to "Sign in", new_user_session_path, class: "btn btn-custom-primary" %>
                    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-custom-secondary" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</header>