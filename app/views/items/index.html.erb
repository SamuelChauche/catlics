<div class="row">
  <% @items.each do |item| %>
    <div class="col-6 col-md-4 col-lg-3 mb-4">
      <div class="card">
        <% if item.image.attached? %>
          <%= link_to item_path(item) do %>
            <div class="img-container">
              <%= image_tag item.image, class: "card-img-top", alt: item.title %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
