<%= render 'items/form' %>

<div class=" d-flex justify-content-center">

    <div class="checkbox-wrapper-5 d-flex justify-content-center">


        <div class="check">
            <input type="checkbox" id="toggle-cats">
            <label for="toggle-cats"></label>
        </div>
    </div>

</div>


<div class="boxes-con" id="main-boxes">
    <% @items.each do |item| %>
    <div class="boxes">
        <%= link_to item_path(item) do %>
        <%= image_tag item.image, 
              class: "cat-image", 
              alt: item.title, 
              data: { original: url_for(item.image) } %>
        <% end %>
    </div>
    <% end %>
</div>



<div class="d-flex justify-content-center my-4">
    <%= will_paginate @products, class: "pagination pagination-lg" %>
</div>
</div>