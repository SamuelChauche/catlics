<section class="h-100 gradient-custom-2">
    <div class="card-header bg-dark text-white text-center">
        <h3>My Profil</h3>
    </div>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center">
            <div class="col col-lg-9 col-xl-8">
                <div class="card shadow-lg">
                    <div class="rounded-top text-white d-flex flex-row" style="background-color: #F2E3BF; height:200px;">
                        <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                            <%= image_tag "https://picsum.photos/seed/#{current_user.id}/150",
                alt:"Generic placeholder image", class:"img-fluid img-thumbnail mt-4 mb-2",
                style:"width: 150px; z-index: 1" %>


                            <div class="d-grid gap-2 mb-5" style="z-index: 1;">
                                <%= link_to "Modify profil", edit_user_registration_path, class: "btn-custom basic" %>
                            </div>
                        </div>

                        <div class="ms-3" style="margin-top: 130px; color: black">
                        </div>
                    </div>
                    <div class="p-2 text-black bg-body-tertiary">
                        <div class="d-flex justify-content-end text-center py-2 text-body">
                            <div>
                                <p class="mb-1 h5"></p>
                                
                            </div>
                            <div class="px-3">
                                <p class="mb-1 h5"></p>
                                
                            </div>
                            <div>
                                <p class="mb-1 h5"></p>
                                
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4 text-black mt-4">
                        <div class="mb-5  text-body">
                            <p class="lead fw-normal mb-2">About</p>
                            <div class="font-italic mb-1">
                            <p class="font-italic mb-1"><%= current_user.email %></p>
                            <p class="font-italic mb-1">Member since: <%= current_user.created_at.strftime("%B %Y") %></p>
                            </div>
                        </div>
                        <h5>Commandes passées</h5>
                        <%@orders.each do |order|%>
                            <p>Numéro de la commande : <a href="/orders/<%= order.id %>"><%= order.id %></a></p>

                            <p>Date de la commande : <%= order.created_at.strftime("%d/%m/%Y")%></p>
                            <p>Statut de la commande : <%= order.status%></p>
                            <div class="row">
                                <% order.order_items.each do |order_item|%>
                                <div class="col-6 col-md-4 col-lg-3 mb-4">
                                    <div class="card">
                                        <%= image_tag order_item.item.image, class: "card-img-top",alt: "Image commande" %>
                                    </div>
                                </div>
                                <% end%>
                            </div>
                        <% end%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>